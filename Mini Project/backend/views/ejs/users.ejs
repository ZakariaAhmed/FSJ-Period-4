<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/friend-finder/stylesheets/style.css' />
  </head>
  <body>
    <h1><%= title %></h1>

    <h3>List of All Users</h3>
    
    <table>
      <thead>
          <tr>
              <th>ID</th>
              <th>User Name</th>
              <th>First Name</th>
              <th>Last Name</th>
              <th>Email</th>
          </tr>
      </thead>
      <tbody>
        <% for (const user of users) { %>
            <tr>
              <td><%= user._id %></td>
              <td><%= user.userName %></td>
              <td><%= user.firstName %></td>
              <td><%= user.lastName %></td>
              <td><%= user.email %></td>
            </tr>
        <% } %>
      </tbody>
    </table>

    <h3>Total Users: <%= users.length %></h3>

    <hr>

    <a href='/friend-finder/addUser'>&bull; Add User</a> <br>
    <a href='/friend-finder/'>&bull; Go back...</a>
  </body>
</html>
